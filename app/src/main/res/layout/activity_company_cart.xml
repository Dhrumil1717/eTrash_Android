<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyCartActivity">

    <RelativeLayout
        android:id="@+id/rl11"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_green_light">

        <TextView
            android:id="@+id/admin_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Total Price = "
            android:textAlignment="center"
            android:textSize="20dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/admin_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Congratulations, your order has been placed successfully . Soon it will be verified"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_cart_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/admin_next_process_button"
        android:layout_below="@+id/rl11"></androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/admin_next_process_button"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@android:color/holo_green_light"
        android:text="Next"
        android:textColor="@android:color/black" />

</RelativeLayout>